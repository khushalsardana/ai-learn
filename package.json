{
  "name": "ai-learn-platform",
  "version": "1.0.0",
  "description": "AI-Powered E-Learning Platform with dynamic quiz generation and ML-based recommendations",
  "author": "",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../ml_service && pip install -r requirements.txt",
    "train:ml": "cd ml_service && python train_model.py",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:ml": "cd ml_service && python app.py",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start"
  },
  "keywords": [
    "ai",
    "machine-learning",
    "education",
    "e-learning",
    "quiz",
    "gemini-api",
    "next.js",
    "express.js",
    "mongodb",
    "flask"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ai-learn"
  }
}
